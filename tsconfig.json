{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strictFunctionTypes": true,
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/*", "**/*.spec.ts"]
}
